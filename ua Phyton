друкувати = print
прийняти = input
так = True
Помилка_Файл_не_знайдено = FileNotFoundError
__імя__ = __name__

import os
import sys

def run_command(команда):
    if команда == "exit":
        друкувати("Вихід з системи...")
        sys.exit()
    elif команда == "list":
        друкувати("Список файлів в поточній директорії:")
        for файл in os.listdir():
            друкувати(файл)
    elif команда.startswith("create"):
        назвафайлу = команда.split("")[1]
        with open(назвафайлу, "w") as f:
            f.write("")
        друкувати(f"Файл '{назвафайлу}' створено.")
    elif команда.startswith("delete "):
        назвафайлу = команда.split(" ")[1]
        try:
            os.remove(назвафайлу)
            друкувати(f"Файл '{назвафайлу}' видалено.")
        except Помилка_Файл_не_знайдено:
            друкувати(f"Файл '{назвафайлу}' не знайдено.")
    else:
        друкувати("Невідома команда.")

def main():
    друкувати("Проста операційна система")
    while так:
        команда = прийняти(">>> ")
        run_command(команда)

if __імя__== "__main__":
    main()
